<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         point="org.eclipse.ui.commands">
      <category
            name="FCL Suite"
            id="br.com.riselabs.fclcheck.commands.category">
      </category>
      <command
            name="Enable/Disable FCLCheck"
            categoryId="br.com.riselabs.fclcheck.commands.category"
            id="br.com.riselabs.fclcheck.commands.fclcheckCommand">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            commandId="br.com.riselabs.fclcheck.commands.fclcheckCommand"
            class="br.com.riselabs.fclcheck.handlers.FclCheckHandler">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.bindings">
      <key
            commandId="br.com.riselabs.fclcheck.commands.fclcheckCommand"
            contextId="org.eclipse.ui.contexts.window"
            sequence="M1+6"
            schemeId="org.eclipse.ui.defaultAcceleratorConfiguration">
      </key>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu?after=additions">
         <menu
               label="FCL Suite"
               mnemonic="M"
               id="br.com.riselabs.fclcheck.menus.dclsuiteMenu">
            <command
                  commandId="br.com.riselabs.fclcheck.commands.fclcheckCommand"
                  mnemonic="S"
                  id="br.com.riselabs.fclcheck.menus.dclsuiteCommand">
            </command>
         </menu>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="br.com.riselabs.fclcheck.toolbars.dclsuiteToolbar">
            <command
                  commandId="br.com.riselabs.fclcheck.commands.fclcheckCommand"
                  icon="icons/fclicon16.png"
                  id="br.com.riselabs.fclcheck.toolbars.dclsuiteCommand">
            </command>
         </toolbar>
      </menuContribution>
      <menuContribution
            locationURI="popup:org.eclipse.jdt.ui.PackageExplorer">
         <command
               commandId="br.com.riselabs.fclcheck.commands.fclcheckCommand"
               icon="icons/fclicon16.png"
               id="br.com.riselabs.fclcheck.popup.context">
               <visibleWhen>
               <with
                     variable="activeMenuSelection">
                  <iterate ifEmpty="false">
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
   
</plugin>
